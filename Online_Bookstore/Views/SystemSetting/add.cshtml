@model Online_Bookstore.Models.SystemSetting
@{
    ViewBag.Title = "Thêm cài đặt";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>

    <form asp-action="Add" asp-controller="Settings" method="post">
        <div class="form-group">
            <label>Key</label>
            <input asp-for="SettingKey" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Value</label>
            <textarea asp-for="SettingValue" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" asp-controller="Settings" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
