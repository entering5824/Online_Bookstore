@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Database Test Results";
}

<div class="container">
    <h2>Database Test Results</h2>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Kết quả kiểm tra</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h5>Trạng thái kết nối:</h5>
                        <p>@ViewBag.ConnectionStatus</p>
                    </div>
                    
                    @if (ViewBag.QueryStatus != null)
                    {
                        <div class="alert alert-info">
                            <h5>Trạng thái truy vấn:</h5>
                            <p>@ViewBag.QueryStatus</p>
                        </div>
                    }
                    
                    @if (ViewBag.UserCount != null)
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h3>@ViewBag.UserCount</h3>
                                        <p>Users</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h3>@ViewBag.BookCount</h3>
                                        <p>Books</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h3>@ViewBag.CategoryCount</h3>
                                        <p>Categories</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <h5>Chi tiết lỗi:</h5>
                            <pre>@ViewBag.Error</pre>
                        </div>
                    }
                    
                    <hr>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                        <i class="fas fa-home me-2"></i>Về trang chủ
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-primary">
                        <i class="fas fa-redo me-2"></i>Test lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
