@model Online_Bookstore.Models.Reservation
@{
    ViewBag.Title = "Thêm đặt trước";
    var currentUser = ViewBag.CurrentUser as YourNamespace.Models.User;
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <form asp-action="Add" asp-controller="Reservations" method="post">
        <div class="form-group">
            <label>Sách</label>
            <select asp-for="BookIds" class="form-control" multiple required>
                @foreach (var book in Model.Books)
                {
                    <option value="@book.BookId">@(!string.IsNullOrEmpty(book.Title) ? book.Title : "Không rõ tên sách")</option>
                }
            </select>
            <small class="form-text text-muted">Giữ Ctrl (Windows) hoặc Command (Mac) để chọn nhiều sách</small>
        </div>

        @if (currentUser.Role == "MEMBER")
        {
            <!-- MEMBER: tự động lấy user hiện tại -->
            <input type="hidden" asp-for="UserId" value="@currentUser.UserId" />
            <div class="form-group">
                <label>Người đặt</label>
                <input type="text" class="form-control" value="@($"{currentUser.FullName} ({currentUser.UserCode})")" readonly />
                <small class="form-text text-muted">Bạn chỉ có thể đặt sách cho chính mình</small>
            </div>
            <input type="hidden" asp-for="Status" value="Chờ xử lý" />
        }
        else
        {
            <!-- ADMIN/LIBRARIAN: chọn user -->
            <div class="form-group">
                <label>Người đặt</label>
                <select asp-for="UserId" class="form-control" required>
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.UserId">@(!string.IsNullOrEmpty(user.FullName) ? user.FullName : "Không rõ tên") (@(!string.IsNullOrEmpty(user.UserCode) ? user.UserCode : "---"))</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Trạng thái</label>
                <select asp-for="Status" class="form-control">
                    <option value="Chờ xử lý">Chờ xử lý</option>
                    <option value="Đã duyệt">Đã duyệt</option>
                    <option value="Từ chối">Từ chối</option>
                    <option value="Hoàn thành">Hoàn thành</option>
                </select>
            </div>
        }

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" asp-controller="Reservations" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
