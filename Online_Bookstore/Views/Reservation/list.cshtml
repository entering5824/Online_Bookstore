@model IEnumerable<Online_Bookstore.Models.Reservation>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Reservations";
    var currentUser = Session["CurrentUser"] as Online_Bookstore.Models.User;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-0">
                        <i class="fas fa-calendar-check me-2 text-primary"></i>Reservations
                    </h1>
                    <p class="text-muted">Manage book reservations and waiting lists</p>
                </div>
                @if (currentUser != null && (currentUser.Role == "ADMIN" || currentUser.Role == "LIBRARIAN" || currentUser.Role == "MEMBER"))
                {
                    <a href="@Url.Action("Add", "Reservation")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add Reservation
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="statusFilter" class="form-label">Status</label>
                            <select class="form-select" id="statusFilter">
                                <option value="">All Status</option>
                                <option value="PENDING">Pending</option>
                                <option value="FULFILLED">Fulfilled</option>
                                <option value="CANCELLED">Cancelled</option>
                                <option value="EXPIRED">Expired</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="userFilter" class="form-label">User</label>
                            <input type="text" class="form-control" id="userFilter" placeholder="Search by user...">
                        </div>
                        <div class="col-md-3">
                            <label for="bookFilter" class="form-label">Book</label>
                            <input type="text" class="form-control" id="bookFilter" placeholder="Search by book...">
                        </div>
                        <div class="col-md-3">
                            <label for="dateFilter" class="form-label">Date Range</label>
                            <input type="date" class="form-control" id="dateFilter">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reservations Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="reservationsTable">
                            <thead class="table-light">
                                <tr>
                                    <th width="80">
                                        <i class="fas fa-sort me-1"></i>ID
                                    </th>
                                    <th>
                                        <i class="fas fa-sort me-1"></i>User
                                    </th>
                                    <th>
                                        <i class="fas fa-sort me-1"></i>Book
                                    </th>
                                    <th width="140">
                                        <i class="fas fa-sort me-1"></i>Reservation Date
                                    </th>
                                    <th width="140">
                                        <i class="fas fa-sort me-1"></i>Expiry Date
                                    </th>
                                    <th width="120">
                                        <i class="fas fa-sort me-1"></i>Status
                                    </th>
                                    <th width="150">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var reservation in Model)
                                    {
                                        <tr class="reservation-row" 
                                            data-status="@reservation.Status"
                                            data-user="@(reservation.User?.FullName?.ToLower() ?? "")"
                                            data-book="@(reservation.Book?.Title?.ToLower() ?? "")"
                                            data-date="@reservation.ReservationDate.ToString("yyyy-MM-dd")">
                                            <td>
                                                <span class="badge bg-secondary">@reservation.Id</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                                        <i class="fas fa-user text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@(reservation.User?.FullName ?? "N/A")</h6>
                                                        <small class="text-muted">@(reservation.User?.Email ?? "")</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3">
                                                        <i class="fas fa-book text-info"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0 text-truncate" title="@(reservation.Book?.Title ?? "N/A")">@(reservation.Book?.Title ?? "N/A")</h6>
                                                        <small class="text-muted">@(reservation.Book?.Author ?? "")</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">
                                                    <i class="fas fa-calendar me-1"></i>@reservation.ReservationDate.ToString("MMM dd, yyyy")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @(reservation.ExpiryDate < DateTime.Now ? "bg-danger" : "bg-light text-dark")">
                                                    <i class="fas fa-clock me-1"></i>@reservation.ExpiryDate.ToString("MMM dd, yyyy")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-@(reservation.Status == "PENDING" ? "warning" : reservation.Status == "FULFILLED" ? "success" : reservation.Status == "CANCELLED" ? "danger" : "secondary")">
                                                    @reservation.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (currentUser != null && (currentUser.Role == "ADMIN" || currentUser.Role == "LIBRARIAN"))
                                                {
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="@Url.Action("Edit", "Reservation", new { id = reservation.Id })" 
                                                           class="btn btn-outline-warning" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a href="@Url.Action("Delete", "Reservation", new { id = reservation.Id })" 
                                                           class="btn btn-outline-danger" 
                                                           onclick="return confirm('Are you sure you want to delete this reservation?')" 
                                                           title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No actions</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-5">
                                            <i class="fas fa-calendar-times fa-3x mb-3"></i>
                                            <h5>No reservations found</h5>
                                            <p>There are no reservations to display at the moment.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Filter functionality
    const statusFilter = document.getElementById('statusFilter');
    const userFilter = document.getElementById('userFilter');
    const bookFilter = document.getElementById('bookFilter');
    const dateFilter = document.getElementById('dateFilter');
    const reservationRows = document.querySelectorAll('.reservation-row');

    function filterReservations() {
        const statusValue = statusFilter.value.toLowerCase();
        const userValue = userFilter.value.toLowerCase();
        const bookValue = bookFilter.value.toLowerCase();
        const dateValue = dateFilter.value;

        reservationRows.forEach(row => {
            const status = row.dataset.status.toLowerCase();
            const user = row.dataset.user;
            const book = row.dataset.book;
            const date = row.dataset.date;

            const statusMatch = !statusValue || status === statusValue;
            const userMatch = !userValue || user.includes(userValue);
            const bookMatch = !bookValue || book.includes(bookValue);
            const dateMatch = !dateValue || date === dateValue;

            if (statusMatch && userMatch && bookMatch && dateMatch) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    // Add event listeners
    statusFilter.addEventListener('change', filterReservations);
    userFilter.addEventListener('input', filterReservations);
    bookFilter.addEventListener('input', filterReservations);
    dateFilter.addEventListener('change', filterReservations);
});
</script>
