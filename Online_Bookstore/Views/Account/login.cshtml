@{
    Layout = null; // Không dùng layout
    Response.ContentType = "text/html; charset=UTF-8";
    var error = ViewBag.Error; // Lấy thông báo lỗi từ controller
}

<div class="container mt-5" style="max-width:400px;">
    <h3 class="mb-4 text-center">Đăng nhập hệ thống</h3>
    <form asp-action="Login" method="post">
        <div class="form-group mb-3">
            <label>Tên đăng nhập</label>
            <input type="text" name="username" class="form-control" required autofocus />
        </div>
        <div class="form-group mb-3">
            <label>Mật khẩu</label>
            <input type="password" name="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        <div class="mt-3 text-center">
            <a asp-action="Register">Đăng ký</a> |
            <a asp-action="ForgotPassword">Quên mật khẩu?</a>
        </div>

        @if (!string.IsNullOrEmpty(error))
        {
            <div class="alert alert-danger mt-3">@error</div>
        }
    </form>
</div>
