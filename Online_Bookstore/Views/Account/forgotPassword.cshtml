@{
    Layout = "_Layout"; // Sử dụng layout chung của site
    Response.ContentType = "text/html; charset=UTF-8";

    // Lấy dữ liệu từ controller
    var message = ViewBag.Message;
    var error = ViewBag.Error;
}

<div class="container mt-5" style="max-width:400px;">
    <h3 class="mb-4 text-center">Quên mật khẩu</h3>
    <form asp-action="ForgotPassword" method="post">
        <div class="form-group mb-3">
            <label>Email</label>
            <input type="email" name="email" class="form-control" required autofocus />
        </div>
        <button type="submit" class="btn btn-warning w-100">Gửi email đặt lại mật khẩu</button>
        <div class="mt-3 text-center">
            <a asp-action="Login">Quay lại đăng nhập</a>
        </div>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-info mt-3">@message</div>
        }
        @if (!string.IsNullOrEmpty(error))
        {
            <div class="alert alert-danger mt-3">@error</div>
        }
    </form>
</div>
