@model BorrowRecordViewModel
@{
    ViewData["Title"] = "Thêm phiếu mượn";
}

<div class="container mt-4">
    <h2>Thêm phiếu mượn</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Add" method="post">
        @if (Model.CurrentUser.Role == "MEMBER")
        {
            <input type="hidden" name="BorrowRecord.UserId" value="@Model.CurrentUser.UserId" />
            <div class="form-group">
                <label>Người mượn</label>
                <input type="text" class="form-control" value="@Model.CurrentUser.FullName (@Model.CurrentUser.UserCode)" readonly />
                <small class="form-text text-muted">Bạn chỉ có thể mượn sách cho chính mình</small>
            </div>
        }
        else
        {
            <div class="form-group">
                <label>Người mượn</label>
                <select name="BorrowRecord.UserId" class="form-control" required>
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.UserId">@user.FullName (@user.UserCode)</option>
                    }
                </select>
            </div>
        }

        <div class="form-group">
            <label>Sách</label>
            <select name="BorrowRecord.BookIds" class="form-control" multiple required>
                @foreach (var book in Model.Books)
                {
                    <option value="@book.BookId">@book.Title</option>
                }
            </select>
            <small class="form-text text-muted">Giữ Ctrl (Windows) hoặc Command (Mac) để chọn nhiều sách</small>
        </div>

        <div class="form-group">
            <label>Ngày mượn</label>
            <input type="date" name="BorrowRecord.BorrowDate" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Hạn trả</label>
            <input type="date" name="BorrowRecord.DueDate" class="form-control" required />
        </div>

        @if (Model.CurrentUser.Role != "MEMBER")
        {
            <div class="form-group">
                <label>Trạng thái</label>
                <select name="BorrowRecord.Status" class="form-control">
                    <option value="Đang mượn">Đang mượn</option>
                    <option value="Đã trả">Đã trả</option>
                    <option value="Quá hạn">Quá hạn</option>
                </select>
            </div>
        }
        else
        {
            <input type="hidden" name="BorrowRecord.Status" value="Đang mượn" />
        }

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

