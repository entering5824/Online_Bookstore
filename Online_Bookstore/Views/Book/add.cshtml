@model Online_Bookstore.Models.BookViewModel < !--Thay bằng model thực tế -->
@{
    Layout = "_Layout"; // Nếu dùng layout chung
    ViewBag.Title = "Thêm sách mới";
}

<div class="container mt-4">
    <h2>Thêm sách mới</h2>
    <form asp-action="Add" asp-controller="Books" method="post">
        <div class="form-group">
            <label>Mã sách</label>
            <input asp-for="BookCode" class="form-control" required />
            <small class="form-text text-muted">Nhập mã định danh cho sách (ví dụ: BOOK001)</small>
        </div>
        <div class="form-group">
            <label>Tên sách</label>
            <input asp-for="Title" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Tác giả</label>
            <input asp-for="Author" class="form-control" required />
        </div>
        <div class="form-group">
            <label>ISBN</label>
            <input asp-for="ISBN" class="form-control" />
        </div>
        <div class="form-group">
            <label>Năm xuất bản</label>
            <input asp-for="PublicationYear" type="number" class="form-control" />
        </div>
        <div class="form-group">
            <label>Nhà xuất bản</label>
            <input asp-for="Publisher" class="form-control" />
        </div>
        <div class="form-group">
            <label>Ngôn ngữ</label>
            <input asp-for="Language" class="form-control" />
        </div>
        <div class="form-group">
            <label>Danh mục</label>
            <select asp-for="Category.CategoryId" class="form-control" required>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Tổng số bản</label>
            <input asp-for="TotalCopies" type="number" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Số bản có sẵn</label>
            <input asp-for="AvailableCopies" type="number" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
