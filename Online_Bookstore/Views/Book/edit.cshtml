@model Online_Bookstore.Models.BookEditViewModel < !--Thay bằng model thực tế -->
@{
    Layout = "_Layout"; // Nếu dùng layout chung
    ViewBag.Title = "Sửa sách";
}

<div class="container mt-4">
    <h2>Sửa sách</h2>
    <form asp-action="Edit" asp-controller="Books" method="post">
        <input type="hidden" asp-for="BookId" />

        <div class="form-group">
            <label>Tên sách</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Tác giả</label>
            <input asp-for="Author" class="form-control" />
        </div>

        <div class="form-group">
            <label>ISBN</label>
            <input asp-for="ISBN" class="form-control" />
        </div>

        <div class="form-group">
            <label>Danh mục</label>
            <select asp-for="Category.CategoryId" class="form-control" required>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId" @(Model.Category.CategoryId == category.CategoryId ? "selected" : "")>
                        @category.CategoryName
                    </option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
