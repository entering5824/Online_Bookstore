<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<html>
<head>
    <title>Danh sách sách</title>
    <link rel="stylesheet" href="/resources/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>Danh sách sách</h2>

        <c:if test="${not empty error}">
            <div class="alert alert-danger" role="alert">
                ${error}
            </div>
        </c:if>

        <c:if test="${not empty success}">
            <div class="alert alert-success" role="alert">
                ${success}
            </div>
        </c:if>

        <!-- Chỉ hiện nút Thêm sách nếu là ADMIN hoặc LIBRARIAN (IN HOA) -->
        <c:if test="${sessionScope.currentUser != null && (sessionScope.currentUser.role == 'ADMIN' || sessionScope.currentUser.role == 'LIBRARIAN')}">
            <a href="${pageContext.request.contextPath}/books/add" class="btn btn-primary mb-3">Thêm sách</a>
        </c:if>

        <form action="${pageContext.request.contextPath}/books/search" method="get" class="mb-3">
            <div class="row">
                <div class="col-md-3">
                    <input type="text" name="title" class="form-control" placeholder="Tìm theo tên sách">
                </div>
                <div class="col-md-3">
                    <input type="text" name="author" class="form-control" placeholder="Tìm theo tác giả">
                </div>
                <div class="col-md-3">
                    <input type="text" name="isbn" class="form-control" placeholder="Tìm theo ISBN">
                </div>
                <div class="col-md-3">
                    <input type="text" name="category" class="form-control" placeholder="Tìm theo thể loại">
                </div>
            </div>
            <button type="submit" class="btn btn-secondary mt-2">Tìm kiếm</button>
        </form>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Mã sách</th>
                    <th>Tên sách</th>
                    <th>Tác giả</th>
                    <th>ISBN</th>
                    <th>Thể loại</th>
                    <th>Số bản</th>
                    <th>Có sẵn</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <c:forEach items="${books}" var="book">
                    <tr>
                        <td>${book.bookId}</td>
                        <td>${book.bookCode}</td>
                        <td>${book.title}</td>
                        <td>${book.author}</td>
                        <td>${book.isbn}</td>
                        <td>${book.category.categoryName}</td>
                        <td>${book.totalCopies}</td>
                        <td>${book.availableCopies}</td>
                        <td>
                            <c:if test="${sessionScope.currentUser != null && (sessionScope.currentUser.role == 'ADMIN' || sessionScope.currentUser.role == 'LIBRARIAN')}">
                                <a href="${pageContext.request.contextPath}/books/edit/${book.bookId}" class="btn btn-sm btn-warning">Sửa</a>
                                <a href="${pageContext.request.contextPath}/books/delete/${book.bookId}" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</a>
                            </c:if>
                        </td>
                    </tr>
                </c:forEach>
            </tbody>
        </table>
    </div>
</body>
</html> 