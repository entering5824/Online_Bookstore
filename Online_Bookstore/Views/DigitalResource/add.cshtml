@model Online_Bookstore.Models.DigitalResource
@{
    ViewData["Title"] = "Thêm tài nguyên số";
}

<div class="container mt-4">
    <h2>Thêm tài nguyên số</h2>
    <form asp-action="Add" method="post">
        <div class="form-group">
            <label>Sách (ID)</label>
            <input asp-for="BookId" class="form-control" type="number" required />
        </div>
        <div class="form-group">
            <label>File URL</label>
            <input asp-for="FileUrl" class="form-control" type="text" required />
        </div>
        <div class="form-group">
            <label>Phân quyền</label>
            <select asp-for="AccessLevel" class="form-control">
                <option value="public">Công khai</option>
                <option value="member_only">Chỉ thành viên</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
